<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectCompScience.View.Login"
             Title="Login">
    <ScrollView>
        <VerticalStackLayout Spacing="25" VerticalOptions="Center">
            <Label 
            Text="UserName (Email)"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Entry Text="{Binding EmailInput}" />


            <Label 
         Text="Password"
         VerticalOptions="Center" 
         HorizontalOptions="Center" />
            <Entry Text="{Binding PasswordInput}" />

            <Button Command="{Binding SubmitLoginCommand}" Text="Login"/>
            <Button BackgroundColor="Transparent" TextColor="blue" Command="{Binding GoRegisterCommand}" Text="Go Register Page"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>