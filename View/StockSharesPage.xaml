<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectCompScience.View.StockSharesPage"
             Title="StockSharesPage"
             xmlns:models="clr-namespace:ProjectCompScience.Models"
             xmlns:viewmodels="clr-namespace:ProjectCompScience.ViewModels">
                
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Shares..."
            VerticalOptions="Center" />
        <CollectionView ItemsSource="{Binding StockShares}">
            <CollectionView.EmptyView>
                <Label HorizontalTextAlignment="Center" Text="No Shares To Show !" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:StockShare">
                    <Border StrokeThickness="1">
                        <StackLayout Padding="10" BackgroundColor="LightGray">
                            <Label FontAttributes="Bold" Text="{Binding Company.CompanyName}" />
                            <Label Text="{Binding price}" />
                            <Grid>
                                <Ellipse
                                    Fill="Red"
                                    HeightRequest="30"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="30" />
                                <Label
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    Text="{Binding quantity}"
                                    TextColor="White"
                                    VerticalOptions="Center" />
                                <Button
                                BackgroundColor="Red"
                                Command="{Binding ButtonDeleteShareCommand, Source={x:RelativeSource AncestorType={x:Type viewmodels:ViewModelShare}, Mode=FindAncestorBindingContext}}"
                                CommandParameter="{Binding .}"
                                HorizontalOptions="Start"
                                Text="Sell"
                                Style="{StaticResource RegisterPageButtons}"
                                WidthRequest="200" />
                            </Grid>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Move to add new page"
    Style="{StaticResource RegisterPageButtons}"
    Command="{Binding ButtonMovePageCommand}"
    IsEnabled="True"
                ></Button>
    </VerticalStackLayout>
</ContentPage>